<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background Image -->
    <item
        android:top="3dp"
        android:bottom="3dp"
        android:left="3dp"
        android:right="3dp">
        <bitmap
            android:src="@drawable/bg_5"
            android:gravity="fill" />
    </item>

    <!-- Border -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" /> <!-- Transparent to allow background image -->
            <stroke
                android:width="3dp"
                android:color="@android:color/holo_blue_bright" />
            <corners android:radius="20dp" />
        </shape>
    </item>

</layer-list>
